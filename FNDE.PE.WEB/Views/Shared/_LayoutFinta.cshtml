<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/Content/dist/css/pages/finta.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    @RenderBody()
    @{
        var mImg = $"/Content/src/img/views/mobile/{ViewBag.ImgName}.jpg";
        var pImg = $"/Content/src/img/views/pc/{ViewBag.ImgName}.jpg";
    }
    <main style="--mimg: url('@mImg'); --pcimg: url('@pImg')">
    </main>
    <script>
        window.addEventListener("click", () => {
            location.href = "/";
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>