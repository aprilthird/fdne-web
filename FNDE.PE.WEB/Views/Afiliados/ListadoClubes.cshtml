@model IEnumerable<FNDE.PE.WEB.PORTAL.ViewModels.AfiliadosViewModels.ClubViewModel>

@{
    ViewBag.Title = "ListadoClubes";
    Layout = "~/Views/Shared/_LayoutBackground.cshtml";
}


<style>
    body {
        background: #111111;
    }
</style>

<main class="f-training f-listClubes">
    <section class="f-section f-section__content f-section-background f-section--dark">
        <div class="f-section-background__image rellax" data-rellax-speed="-7">
            <img src="~/Content/src/img/slide2-1024.png" />
        </div>
        <div class="f-section-background__title f-container">
            <h1>CLUBES AFILIADOS </h1>
        </div>
    </section>

    <div class="f-container">

        @foreach (var club in Model)
        {
            <div class="card-content">
                <div class="multimedia">
                    <img class="multimedia_object" src="@club.urlPicture" alt="Avatar" style="width:100%">
                </div>
                <div class="container">
                    <h4>@club.Name</h4>
                </div>
            </div>
        }



    </div>



</main>








