                    <form class="f-wizard-form__form f-form f-container" action="/" method="post">
                        <div id="caballos-datos" class="f-section-new-afiliation__boxes" style="display:flex">
                            <div class="f-section-new-afiliation__boxes-box">
                                <input class="f-form__control f-input" placeholder="Nnombre*" type="text" name="name" />
                                <input class="f-form__control f-input" placeholder="Procedencia*" type="text" name="name" />
                                <input class="f-form__control f-input" placeholder="Raza*" type="text" name="name" />
                                <input class="f-form__control f-input" placeholder="Hijo del padrillo*" type="text" name="name" />
                                <textarea class="f-form__control f-input" rows="4" placeholder="Pelaje y señas"></textarea>
                            </div>
                            <div class="f-section-new-afiliation__boxes-box">
                                <input class="f-form__control f-input" placeholder="Fecha de nacimiento*" type="date" name="name" />
                                <select class="f-form__control f-select">
                                    <option selected disabled>Sexo*</option>
                                    <option>Macho</option>
                                    <option>Hembra</option>
                                </select>
                                <input class="f-form__control f-input" placeholder="Alzada*" type="text" name="name" />
                                <input class="f-form__control f-input" placeholder="Hijo de la yegua*" type="text" name="name" />
                            </div>
                        </div>

                        <div id="caballos-propietario" class="f-section-new-afiliation__boxes" style="display:none">
                            <div class="f-section-new-afiliation__boxes-box">
                                <input class="f-form__control f-input" placeholder="Propietario *" type="text" name="name" />
                            </div>
                            <div class="f-section-new-afiliation__boxes-box">
                                <input class="f-form__control f-input" placeholder="Domicilio *" type="text" name="name" />
                            </div>
                        </div>

                        <div id="caballos-ficha" class="f-section-new-afiliation__boxes" style="display:none">
                            
                        </div>

                        <div class="f-form__actions">
                            <button class="f-btn f-btn--tertiary" type="button">ANTERIOR</button>
                            <button class="f-btn f-btn--primary" type="button">SIGUIENTE</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </section>
</main>

@section Scripts {
    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
    <script>
        var horseContainer = document.getElementById("Caballos");
        var horseriderContainer = document.getElementById("Jinetes");

        var firstElem = document.querySelector('.f-section-new-afiliation__Fcarousel');
        var Fflkty = new Flickity(firstElem,
            {
                cellAlign: 'left',
                //contain: true,
                //autoPlay: 1500,
                pauseAutoPlayOnHover: false,
                adaptiveHeight: true,
                watchCSS: true
            });
        Fflkty.on('change', function (index) {
            //console.log(index);
            let link = $(".f-section-new-afiliation__Fcarousel .f-link")[index];
            let section = $1(link.getAttribute("href"));          
            let sections = $(".f-section-new-afiliation__content-body");
            //console.log(section);
            sections.forEach(e => e.style.display = "none");
            section.style.display = "block";
        });

        function ShowJienetesForm() {
            //console.log('Jinetes');
            document.getElementById("Jinetes").style.display = "block";
            document.getElementById("Caballos").style.display = "none";

            document.getElementById("jinetes-temporada").style.display = "flex";
            document.getElementById("jinetes-datos").style.display = "none";
            document.getElementById("jinetes-ficha").style.display = "none";

            var elemento = document.getElementsByTagName("li");
            for (var i = 0; i < elemento.length; i++)
                elemento[i].classList.remove("f-wizard-form__steps-item--active");

            var link = document.getElementById("link-jinetes-temporada");
            link.className += " f-wizard-form__steps-item--active";
        }

