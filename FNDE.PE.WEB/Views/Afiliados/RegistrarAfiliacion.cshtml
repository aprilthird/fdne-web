                                    <option>Enduro</option>
                                    <option>Prueba Completa</option>
                                    <option>Salto</option>
                                </select>
                                <select class="f-form__control f-select">
                                    <option selected disabled>Categor&iacute;a*</option>
                                    <option>A1</option>
                                    <option>A2</option>
                                </select>
                            </div>
                        </div>
                        <div id="jinetes-datos" class="f-section-new-afiliation__boxes" style="display:none">
                            <div class="f-section-new-afiliation__boxes-box">
                                <input class="f-form__control f-input" placeholder="Nombres*" type="text" name="name" />
                                <input class="f-form__control f-input" placeholder="Nro. de Registro FDNE*" type="number" name="name" />
                                <select class="f-form__control f-select">
                                    <option selected disabled>Nacionalidad*</option>
                                    <option>Peru</option>
                                    <option>Brasil</option>
                                    <option>España</option>
                                    <option>Alemania</option>
                                </select>
                                <input class="f-form__control f-input" placeholder="D.N.I/C.E. No.*" type="number" name="name" />
                                <input class="f-form__control f-input" placeholder="Fecha de nacimiento*" type="date" name="name" />
                            </div>
                            <div class="f-section-new-afiliation__boxes-box">
                                <input class="f-form__control f-input" placeholder="Apellidos*" type="text" name="name" />
                                <input class="f-form__control f-input" placeholder="Telefono*" type="number" name="name" />
                                <select class="f-form__control f-select">
                                    <option selected disabled>Sexo *</option>
                                    <option>Hombre</option>
                                    <option>Mujer</option>
                                </select>
