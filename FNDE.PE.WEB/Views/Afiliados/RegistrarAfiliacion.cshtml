                                    <option selected disabled>Club que representa*</option>
                                    <option>Club 1</option>
                                    <option>Club 2</option>
                                    <option>Club 3</option>
                                </select>
                            </div>
                        </div>
                        <div id="jinetes-ficha" class="f-section-new-afiliation__boxes" style="display:none">

                        </div>
                        <div class="f-form__actions">
                            <button class="f-btn f-btn--tertiary" type="button">ANTERIOR</button>
                            <button class="f-btn f-btn--primary" type="button">SIGUIENTE</button>
                        </div>
                    </form>
                </div>
            </div>

            <div id="Caballos" class="f-section-new-afiliation__content-body" style="display:none">
                <div class="f-wizard-form">
                    <nav class="f-wizard-form__steps">
                        <ol class="f-wizard-form__steps-list">
                            <li id="link-caballos-datos" class="f-wizard-form__steps-item f-wizard-form__steps-item--active">
