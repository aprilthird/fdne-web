@model FDNE.PE.WEB.ADMIN.Dtos.FederationInformationDto

@{
    ViewBag.Title = "Información General de la Federación";
    ViewBag.SubTitle = "Formulario de Edición";
    ViewBag.Breadcrumbs = new[] {
        new BreadcrumbViewData { Name = ViewBag.Title }
    };
}

<div>
    <div class="animated fadeIn">
        <div class="card">
            <div class="card-header">
                <i class="icon-pencil icons font-2xl"></i> @ViewBag.SubTitle
            </div>
            <form id="form" class="form-horizontal" method="post">
                <div class="card-body">
                    <div id="alert" class="alert alert-danger alert-dismissible fade d-none" role="alert">
                        <span id="alert_text"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.AboutUs, new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.AboutUs, new { @class = "form-control", placeholder = "Acerca de Nosotros", required = "required", rows = "6" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Mision, new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Mision, new { @class = "form-control", placeholder = "Misión", required = "required", rows = "6" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Vision, new { @class = "col-md-2 col-form-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Vision, new { @class = "form-control", placeholder = "Visión", required = "required", rows = "6" })
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-save"></i>&emsp;Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/Content/js/areas/content/federation-information/index.js")"></script>
}