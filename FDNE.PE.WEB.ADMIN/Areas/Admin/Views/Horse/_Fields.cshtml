@using FDNE.PE.CORE.Helpers;
@model FDNE.PE.WEB.ADMIN.Dtos.HorseDto

@Html.HiddenFor(m => m.Id)

<div class="row">
    <div class="form-group col-md-6">
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nombre del caballo", required = "required", autocomplete = "off" })
        </div>
    </div>
    <div class="form-group col-md-6">
        <div class="form-group">

            @Html.LabelFor(m => m.Sex, new { @class = "label" })
            @{
                var selectList = new List<SelectListItem>
{
new SelectListItem { Value = "0", Text = "Macho"},
new SelectListItem { Value = "1", Text = "Hembra"}
};
            }
            @Html.DropDownListFor(m => m.Sex, selectList, new { @class = "form-control select2-single select2-sex", required = "required" })

        </div>
    </div>
</div>
<div class="row">
    <div class="form-group col-md-6">
        <div class="form-group">
            @Html.LabelFor(m => m.BelongsToUs, new { @class = "label" })
            @Html.CheckBoxFor(m => m.BelongsToUs, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group col-md-6">
        <div class="form-group">
            @Html.LabelFor(m => m.IsActive, new { @class = "label" })
            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-control" })
        </div>
    </div>
</div>
<div class="row">
    <div class="form-group col-md-12">
        <div class="form-group">
            @Html.LabelFor(m => m.Base64Image, new { @class = "label" })
            @Html.TextBoxFor(m => m.Base64Image, new { @class = "form-control", type = "file" })
            <span class="pull-right font-italic font-xs">Tama&ntilde;o m&aacute;ximo: 5MB.</span>
        </div>
    </div>
</div>
@if (User.IsInRole(ConstantHelpers.ROLE.ADMIN))
{
    <div class="row">
        <div class="form-group col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.ClubIds, new { @class = "label" })
                @Html.DropDownListFor(m => m.ClubIds, new List<SelectListItem>(), new { @class = "form-control select2-multiple select2-clubs", multiple = "multiple", required = "required" })
            </div>
        </div>
    </div>
}