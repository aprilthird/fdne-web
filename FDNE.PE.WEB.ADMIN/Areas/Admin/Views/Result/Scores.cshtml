@model FDNE.PE.WEB.ADMIN.Areas.Admin.ViewModels.ResultViewModels.RankingEventViewModel
@{
    ViewBag.Title = $"Calificación de Binomios";
    ViewBag.SubTitle = $"Listado de Binomios para el Ranking de {Model.Discipline} - {Model.Season} | Evento: {Model.EventName}{(string.IsNullOrEmpty(Model.Category) ? "" : $" | Categoría: {Model.Category}")}{(string.IsNullOrEmpty(Model.Level) ? "" : $" | Nivel: {Model.Level}")}";
    ViewBag.Breadcrumbs = new[] {
        new BreadcrumbViewData { Name = "Resultados", Area = "Admin", Controller = "Result", Action = "Index" },
        new BreadcrumbViewData { Name = ViewBag.Title }
    };
}

<div>
    <div class="animated fadeIn">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-list"></i> @ViewBag.SubTitle
            </div>
            @Html.HiddenFor(x => x.IsDouble)
            <form id="result_form" class="form form-horizontal" role="form">
                <div class="card-body">
                    <div id="alert" class="alert alert-danger alert-dismissible fade d-none" role="alert">
                        <span id="alert_text"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <label class="label">D&iacute;a</label>
                            <select id="day_filter" class="form-control select2 select2-days"></select>
                        </div>
                    </div>
                    <div class="dataTables_wrapper dt-bootstrap4 no-footer">
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-hover table-striped table-bordered datatable dataTable no-footer" id="result_datatable" role="grid"></table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-save"></i>&emsp;Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/Content/js/areas/admin/result/scores.js")"></script>
}