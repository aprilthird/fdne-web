@model FDNE.PE.WEB.ADMIN.Dtos.BinomialDto

<div class="modal fade show" id="binomials_modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg modal-primary" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Binomios</h4>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body" style="overflow: hidden;">
                <form id="binomial_form" class="form form-horizontal" role="form">
                    <div id="binomial_alert" class="alert alert-danger alert-dismissible fade d-none" role="alert">
                        <span id="binomial_alert_text"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    @Html.HiddenFor(m => m.RankingId)
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(m => m.ClubId, new { @class = "label" })
                            @Html.DropDownListFor(m => m.ClubId, new List<SelectListItem>(), new { @class = "form-control select2-single select2-clubs", required = "required" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(m => m.RiderId, new { @class = "label" })
                            @Html.DropDownListFor(m => m.RiderId, new List<SelectListItem>(), new { @class = "form-control select2-single select2-riders", required = "required" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(m => m.HorseId, new { @class = "label" })
                            @Html.DropDownListFor(m => m.HorseId, new List<SelectListItem>(), new { @class = "form-control select2-single select2-horses", required = "required" })
                        </div>
                    </div>
                    <div class="mb-4 text-right">
                        <button class="btn btn-primary ladda-button" data-style="expand-right" type="submit">
                            <span class="ladda-label">
                                <i class="fa fa-save"></i>&nbsp;Guardar
                            </span>
                        </button>
                    </div>
                </form>
                <div class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-hover table-striped table-bordered datatable dataTable no-footer" id="binomial_datatable" role="grid"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>