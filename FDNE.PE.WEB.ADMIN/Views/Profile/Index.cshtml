@model FDNE.PE.WEB.ADMIN.Dtos.ProfileDto

@{
    ViewBag.Title = "Informacion de Perfil";
    ViewBag.SubTitle = "Información de Lectura";
    ViewBag.Breadcrumbs = new[] {
        new BreadcrumbViewData { Name = ViewBag.Title }
    };
}

<div>
    <div class="animated fadeIn">
        <div class="card">
            <div class="card-header">
                <i class="icon-book-open icons font-2xl"></i> @ViewBag.SubTitle
            </div>
            <form id="form" class="form-horizontal" method="post">
                <div class="card-body">
                    <div id="alert" class="alert alert-danger alert-dismissible fade d-none" role="alert">
                        <span id="alert_text"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 col-form-label font-weight-bold" })
                        <div class="col-md-4">
                            @Html.DisplayFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.PaternalSurname, new { @class = "col-md-2 col-form-label font-weight-bold" })
                        <div class="col-md-4">
                            @Html.DisplayFor(m => m.PaternalSurname, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.MaternalSurname, new { @class = "col-md-2 col-form-label font-weight-bold" })
                        <div class="col-md-4">
                            @Html.DisplayFor(m => m.MaternalSurname, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label font-weight-bold" })
                        <div class="col-md-4">
                            @Html.DisplayFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.DocumentTypeId, new { @class = "col-md-2 col-form-label font-weight-bold" })
                        <div class="col-md-4">
                            @Html.DisplayFor(m => m.DocumentType.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Document, new { @class = "col-md-2 col-form-label font-weight-bold" })
                        <div class="col-md-4">
                            @Html.DisplayFor(m => m.Document, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <a class="btn btn-primary" href="@Url.Action("Edit", "Profile", new { area = "" })">
                        <i class="fa fa-edit"></i>&emsp;Editar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
